import random
CHOICES = ("rock", "paper", "scissors")
def compute_winner(player, computer):
    if player == computer:
        return "Tie"
    if (player == "rock" and computer == "scissors") or \
       (player == "paper" and computer == "rock") or \
       (player == "scissors" and computer == "paper"):
        return "Win"
    return "Lose"
def play_round():
    print("\n------- Rock • Paper • Scissors -------")
    user_choice = input("Choose Rock, Paper, or Scissors: ").strip().lower()
    if user_choice not in CHOICES:
        print("Enter a valid choice. Please try again!")
        return None, None, None
    computer_choice = random.choice(CHOICES)
    result = compute_winner(user_choice, computer_choice)
    print(f"\nYou chose      : {user_choice.capitalize()}")
    print(f"Computer chose : {computer_choice.capitalize()}")
    print(f"Result         : You {result}")
    return user_choice, computer_choice, result
def game():
    user_score = 0
    computer_score = 0
    while True:
        user, comp, outcome = play_round()
        if outcome is None:
            continue
        if outcome == "Win":
            user_score += 1
        elif outcome == "Lose":
            computer_score += 1
        print(f"\nScoreboard → You: {user_score} | Computer: {computer_score}")
        again = input("\nPlay again? (yes/no): ").strip().lower()
        if again != 'yes':
            break
    print("\n--- Game Over ---")
    print(f"Final Score → You: {user_score} | Computer: {computer_score}")
    print("Thanks for playing!")
if __name__ == "__main__":
    game()
