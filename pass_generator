import secrets
import string
def generate_password(length, use_upper=True, use_digits=True, use_symbols=True):
    if length < 4:
        raise ValueError("Password length must be at least 4 characters")
    char_pool = string.ascii_lowercase
    password_chars = []
    if use_upper:
        password_chars.append(secrets.choice(string.ascii_uppercase))
        char_pool += string.ascii_uppercase
    if use_digits:
        password_chars.append(secrets.choice(string.digits))
        char_pool += string.digits
    if use_symbols:
        password_chars.append(secrets.choice(string.punctuation))
        char_pool += string.punctuation
    while len(password_chars) < length:
        password_chars.append(secrets.choice(char_pool))
    secrets.SystemRandom().shuffle(password_chars)
    return ''.join(password_chars)
if __name__ == "__main__":
    print("Specialized Password Generator!!!")
    try:
        length = int(input("Enter a Password Length: "))
    except ValueError:
        print("Invalid input! Length must be a number.")
        exit()
    print("\n-------- Select Password Complexity --------")
    upper = input("Include uppercase letters? (yes/no): ").strip().lower() == 'yes'
    digits = input("Include digits? (yes/no): ").strip().lower() == 'yes'
    symbols = input("Include symbols? (yes/no): ").strip().lower() == 'yes'
    try:
        password = generate_password(length, upper, digits, symbols)
        print("\nGenerated Password:")
        print(password)
    except Exception as e:
        print(f"Error: {e}")
